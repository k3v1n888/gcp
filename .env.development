# CyberDB AI Development Environment Configuration
# Copy this to .env after running setup

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/cyberdb
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# Application Configuration
# =============================================================================
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
RELOAD=true

# =============================================================================
# AI Model Configuration (Lightweight for Development)
# =============================================================================
USE_CUDA=false
USE_GPU=false
MODEL_CACHE_DIR=./models
TORCH_HOME=./models/torch
TRANSFORMERS_CACHE=./models/transformers

# Model settings for lightweight inference
MODEL_PRECISION=float32
BATCH_SIZE=1
MAX_SEQUENCE_LENGTH=512
INFERENCE_THREADS=2

# Feature flags
ENABLE_SHAP_EXPLANATIONS=true
ENABLE_REAL_TIME_PREDICTIONS=true
ENABLE_MODEL_CACHING=true

# =============================================================================
# External API Configuration (Optional)
# =============================================================================
# Slack Configuration
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_CHANNEL=#alerts
SLACK_ENABLED=false

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_ENABLED=false

# =============================================================================
# Security Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1
ENABLE_CSRF_PROTECTION=false
ENABLE_RATE_LIMITING=false

# =============================================================================
# Monitoring & Logging
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
LOG_FILE=./logs/cyberdb.log

# =============================================================================
# Performance Settings (Optimized for UTM VM)
# =============================================================================
WORKER_PROCESSES=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
TIMEOUT=30
KEEPALIVE=2

# Memory optimization
PYTHON_OPTIMIZE=1
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# =============================================================================
# Development Tools
# =============================================================================
ENABLE_API_DOCS=true
ENABLE_PROFILER=false
ENABLE_HOT_RELOAD=true
AUTO_MIGRATION=true

# =============================================================================
# Testing Configuration
# =============================================================================
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/cyberdb_test
TESTING=false
MOCK_AI_RESPONSES=false

# =============================================================================
# Cloud Configuration (Disabled for Local Development)
# =============================================================================
USE_CLOUD_STORAGE=false
USE_CLOUD_SECRETS=false
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# =============================================================================
# Cache Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
ENABLE_CACHING=true

# =============================================================================
# WebSocket Configuration
# =============================================================================
WS_URL=ws://localhost:8000
ENABLE_WEBSOCKETS=true
WS_MAX_CONNECTIONS=100

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=.txt,.csv,.json,.log

# =============================================================================
# Threat Intelligence Configuration
# =============================================================================
ENABLE_THREAT_INTEL=true
THREAT_INTEL_UPDATE_INTERVAL=3600  # 1 hour
MAX_THREAT_LOGS=10000

# =============================================================================
# UEBA Configuration
# =============================================================================
ENABLE_UEBA=true
UEBA_SENSITIVITY=medium
ANOMALY_THRESHOLD=0.7

# =============================================================================
# Network Security Configuration
# =============================================================================
ENABLE_NETWORK_MONITORING=true
NETWORK_SCAN_INTERVAL=300  # 5 minutes
PORT_SCAN_DETECTION=true

# =============================================================================
# Incident Response Configuration
# =============================================================================
ENABLE_AUTO_RESPONSE=false
INCIDENT_ESCALATION_TIME=1800  # 30 minutes
MAX_CONCURRENT_INCIDENTS=50
