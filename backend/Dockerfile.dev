FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy backend requirements files
COPY backend/requirements-clean.txt requirements-clean.txt

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements-clean.txt

# Copy backend code (flat structure for container)
COPY backend/ ./

# Set environment variables
ENV PYTHONPATH=/app
ENV DEV_MODE=true

EXPOSE 8000

# Start FastAPI with hot reload using flat structure
CMD ["uvicorn", "main_flat:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
